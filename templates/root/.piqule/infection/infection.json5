{
  "$schema": "../../vendor/infection/infection/resources/schema.json",

  "source": {
    "directories": {
      "$placeholder": "INFECTION_SOURCE_DIRECTORIES",
      "default": ["../../src"]
    }
  },

  "testFramework": "phpunit",

  "phpUnit": {
    "configDir": "../phpunit"
  },

  "initialTestsPhpOptions": {
    "$placeholder": "INFECTION_PHP_OPTIONS",
    "default": "-d memory_limit=1G"
  },

  "timeout": {
    "$placeholder": "INFECTION_TIMEOUT",
    "default": 30
  },

  "logs": {
    "text": "infection.log",
    "summary": "infection-summary.log",
    "stryker": {
      "badge": "/^(main|develop)$/"
    }
  },

  "mutators": {
    "@default": true
  }
}
