{
  "$schema": "../../vendor/infection/infection/resources/schema.json",

  "source": {
    "directories": [
<< config(infection.source.directories)
    |default(["../../src"])
    |format('        "%s"')
    |join(",")
>>
    ]
  },

  "testFramework": "phpunit",

  "phpUnit": {
    "configDir": "../phpunit"
  },

  "initialTestsPhpOptions": "<< config(infection.php_options)|default(["-d memory_limit=1G"])|scalar >>",
  "timeout": << config(infection.timeout)|default(["30"])|scalar >>,
  "logs": {
    "text": "infection.log",
    "summary": "infection-summary.log",
    "stryker": {
      "badge": "/^(main|develop)$/"
    }
  },

  "mutators": {
    "@default": true
  }
}
