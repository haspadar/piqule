{
    "name": "haspadar/piqule",
    "description": "Static analysis and linters for PHP projects",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Haspadar\\Piqule\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Haspadar\\Piqule\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-xml=coverage-xml"
    },
    "authors": [
        {
            "name": "Kanstantsinas Mesnikas",
            "email": "haspadar@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
      "php": ">=8.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.91",
        "phpunit/phpunit": ">=11.5 <12.0"
    }
}
